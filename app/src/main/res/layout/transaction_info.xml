<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/teal_700"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="7dp"
            android:paddingRight="14dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/Titletext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Pname"
                android:textColor="#002C1F"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Custtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Customer Name:"
                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Titletext"
                tools:layout_editor_absoluteX="14dp" />


            <TextView
                android:id="@+id/CustName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/Custtitle"
                app:layout_constraintTop_toBottomOf="@+id/Titletext" />

            <TextView
                android:id="@+id/cost_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Cost: "
                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Custtitle"
                tools:layout_editor_absoluteX="14dp" />


            <TextView
                android:id="@+id/cost_trans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cost_view"
                app:layout_constraintTop_toBottomOf="@+id/Custtitle" />

            <TextView
                android:id="@+id/ddate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Deilvery Date:"
                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cost_view"
                tools:layout_editor_absoluteX="14dp" />


            <TextView
                android:id="@+id/deliverydate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ddate"
                app:layout_constraintTop_toBottomOf="@+id/cost_view" />

            <TextView
                android:id="@+id/dname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Deilvery Executive:"
                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ddate"
                tools:layout_editor_absoluteX="14dp" />

            <TextView
                android:id="@+id/deliveryexec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dname"
                app:layout_constraintTop_toBottomOf="@+id/ddate" />

            <TextView
                android:id="@+id/dnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Deilvery Number:"
                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dname"
                tools:layout_editor_absoluteX="14dp" />

            <TextView
                android:id="@+id/deliverynum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dnum"
                app:layout_constraintTop_toBottomOf="@+id/deliveryexec" />

            <TextView
                android:id="@+id/qty_trans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Quantity:"
                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dnum"
                tools:layout_editor_absoluteX="14dp" />

            <TextView
                android:id="@+id/quantity_trans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/qty_trans"
                app:layout_constraintTop_toBottomOf="@+id/dnum" />

            <TextView
                android:id="@+id/stat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Status: "

                android:textColor="#002C1F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qty_trans"
                tools:layout_editor_absoluteX="14dp" />

            <TextView
                android:id="@+id/stat_trans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="NULL"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/stat"
                app:layout_constraintTop_toBottomOf="@+id/qty_trans" />

            <Button
                android:id="@+id/codbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#B52222"
                android:text="C.O.D"
                app:layout_constraintBottom_toTopOf="@+id/offlinetransact"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.536"
                app:layout_constraintStart_toEndOf="@+id/CustName"
                app:rippleColor="#FFC107" />

            <Button
                android:id="@+id/offlinetransact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFLINE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.634"
                app:layout_constraintStart_toEndOf="@+id/dname" />
            <Button
                android:id="@+id/addfeedbacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD FEEDBACK"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/deliveryexec"
                app:layout_constraintTop_toBottomOf="@+id/Titletext"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

