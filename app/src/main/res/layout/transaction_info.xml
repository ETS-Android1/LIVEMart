<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/teal_700">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="16dp"
                android:paddingTop="7dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Pname"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    android:layout_marginTop="7dp"
                    android:id="@+id/Titletext"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/Custtitle"
                    android:text="Customer Name:"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    app:layout_constraintTop_toBottomOf="@+id/Titletext"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp" />


                <TextView
                    android:id="@+id/CustName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/Custtitle"
                    app:layout_constraintTop_toBottomOf="@+id/Titletext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/cost_view"
                    android:text="Cost: "
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    app:layout_constraintTop_toBottomOf="@+id/Custtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp" />


                <TextView
                    android:id="@+id/cost_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/cost_view"
                    app:layout_constraintTop_toBottomOf="@+id/Custtitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/ddate"
                    android:text="Deilvery Date:"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/cost_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp" />


                <TextView
                    android:id="@+id/deliverydate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/ddate"
                    app:layout_constraintTop_toBottomOf="@+id/cost_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/dname"
                    android:text="Deilvery Executive:"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/ddate"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp" />

                <TextView
                    android:id="@+id/deliveryexec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/dname"
                    app:layout_constraintTop_toBottomOf="@+id/ddate"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/dnum"
                    android:text="Deilvery Number:"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    app:layout_constraintTop_toBottomOf="@+id/dname"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp" />

                <TextView
                    android:id="@+id/deliverynum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/dnum"
                    app:layout_constraintTop_toBottomOf="@+id/deliveryexec"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/qty_trans"
                    android:text="Quantity:"
                    android:textStyle="bold"
                    android:textColor="#002C1F"                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/dnum"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp" />

                <TextView
                    android:id="@+id/quantity_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/qty_trans"
                    app:layout_constraintTop_toBottomOf="@+id/dnum"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/stat"
                    android:text="Status: "
                    android:textStyle="bold"

                    android:textColor="#002C1F"                    app:layout_constraintTop_toBottomOf="@+id/qty_trans"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="14dp"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/stat_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NULL"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/stat"
                    app:layout_constraintTop_toBottomOf="@+id/qty_trans"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
