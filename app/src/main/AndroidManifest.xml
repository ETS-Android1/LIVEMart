<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oop_project">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OOP_project">
        <activity
            android:name=".otp_extra.ShopFilterActivity"
            android:label="@string/title_activity_shop_filter"
            android:theme="@style/Theme.OOP_project.NoActionBar"></activity>
        <activity android:name=".Main.VerifyOTPActivity" />
        <activity android:name=".Main.SendOTPActivity" />
        <activity android:name=".Main.addproduct" />
        <activity android:name=".otp_extra.entermobilenumber" />
        <activity android:name=".otp_extra.verifyenterotptwo" />
        <activity android:name=".Main.NavigationBar" />
        <activity android:name=".Main.addprodnoimage"/>
        <activity android:name=".Main.LoginActivity" />
        <activity android:name=".Main.RegisterActivity" />
        <activity android:name=".Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>